{
  "name": "claude-code-usage-tracker",
  "displayName": "Claude Code Usage Tracker",
  "description": "Real-time monitoring of Claude Code token usage, cost tracking, and session management",
  "version": "0.0.2",
  "publisher": "YahyaShareef",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yahyashareef48/claude-usage-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/yahyashareef48/claude-usage-monitor/issues"
  },
  "homepage": "https://github.com/yahyashareef48/claude-usage-monitor#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-usage-monitor.showPopup",
        "title": "Claude: Show Popup"
      }
    ],
    "icons": {
      "claude-icon": {
        "description": "Claude AI icon",
        "default": {
          "fontPath": "./resources/Glyphter.woff",
          "fontCharacter": "\\005E"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.8",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "webfont": "^11.2.26"
  },
  "dependencies": {
    "chokidar": "^4.0.3"
  }
}
